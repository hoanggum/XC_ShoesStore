<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="@("https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css")" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="@("https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js")" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="@("https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js")" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <link rel="stylesheet" href="~/Contents/site.css">
    <title>@ViewBag.Title</title>
</head>
<body>
    @RenderPage("header.cshtml")

    <div class="main-content">
        @RenderBody()
    </div>

    @RenderPage("footer.cshtml")

    <div class="blur-screen"></div>

    <script src="https://kit.fontawesome.com/bfc21e4b01.js" crossorigin="anonymous"></script>
    <script>
        // Lấy phần tử "nav-item" và "blur-screen"
        const navItem = document.querySelectorAll('.nav-item');
        const blurScreen = document.querySelector('.blur-screen');
        // Thêm sự kiện "mouseover" cho phần tử "nav-item"
        for (const iterator of navItem) {
            iterator.addEventListener('mouseover', () => {
                blurScreen.style.visibility = 'visible';
                iterator.addEventListener('mouseout', () => {
                    blurScreen.style.visibility = 'hidden';
                });
            });
        }
    </script>
    <script>
        var searchInput = document.getElementById("search-input");
        var clearSearchInput = document.getElementById("clear-search-input");
        var searchInputBox = document.querySelector(".search-input-box");
        var searchFrame = document.querySelector(".search-frame");
        var searchBox = document.querySelector(".search-box");
        var cancelSearchBox = document.querySelector(".cancel-search-box");
        // Lắng nghe sự kiện input trên input
        searchInput.addEventListener("input", function () {
            if (searchInput.value.trim() !== "") {
                searchFrame.style.display = "block";
                searchInput.style.width = "calc(100% - 4rem - 4rem - 5px)";
                cancelSearchBox.style.display = "inline-block";
                clearSearchInput.style.display = "inline-block";
                searchBox.classList.add("search-box-open");
                searchInputBox.classList.add("search-input-box-open");
                blurScreen.style.visibility = 'visible';
                clearSearchInput.addEventListener("click", function () {
                    searchInput.value = "";
                })

                blurScreen.addEventListener("click", function () {
                    searchInput.value = "";
                    searchFrame.style.display = "none";
                    searchInput.style.width = "calc(100% - 4rem - 5px)";
                    clearSearchInput.style.display = "none";
                    cancelSearchBox.style.display = "none";
                    blurScreen.style.visibility = 'hidden';

                    searchBox.classList.remove("search-box-open");
                    searchInputBox.classList.remove("search-input-box-open");

                })

                cancelSearchBox.addEventListener("click", function () {
                    searchInput.value = "";
                    searchFrame.style.display = "none";
                    searchInput.style.width = "calc(100% - 4rem - 5px)";
                    clearSearchInput.style.display = "none";
                    cancelSearchBox.style.display = "none";
                    blurScreen.style.visibility = 'hidden';

                    searchBox.classList.remove("search-box-open");
                    searchInputBox.classList.remove("search-input-box-open");

                    $('.search-product-display-box').empty();
                })
            }
        });
    </script>
</body>
</html>
