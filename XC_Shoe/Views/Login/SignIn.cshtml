
@{
    ViewBag.Title = "Sign In";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="sign-form">
    <div class="form-header">
        <svg id="logo-nike" viewBox="0 0 24 24" width="60px" height="60px">
            <path d="M 7 6 L 9 6 L 11 9 L 11 11 L 9 14 L 7 14 L 10 10 L 10
                      10 L 7 6 m 11 1 L 20 7 L 20 6 L 18 6 C 13 6 13 14 18 14
                      L 20 14 L 20 13 L 18 13 C 15 12 15 8 18 7 M 21 13 C 21
                      13 21 12 22 13 C 19 10 19 15 23 14 C 24 13 22 12 22 11 C
                      22 11 24 12 23 12 C 24 12 23 11 21 10 C 24 14 21 14 21 13
                      M 11 9 L 13 6 L 15 6 L 12 10 L 12 10 L 15 14 L 13 14 L 11 11">
            </path>
        </svg>
        @*<svg id="logo-nike" viewBox="0 0 24 24" width="60px" height="60px">
                <path d="M21 8.719L7.836 14.303C6.74 14.768 5.818 15 5.075 15c-.836 0-1.445-.295-1.819-.884-.485-.76-.273-1.982.559-3.272.494-.754 1.122-1.446 1.734-2.108-.144.234-1.415 2.349-.025 3.345.275.2.666.298 1.147.298.386 0 .829-.063 1.316-.19L21 8.719z">
                </path>
            </svg>*@
        <h3 class="form-header-tile">YOUR ACCOUNT FOR EVERYTHING NIKE</h3>
    </div>
    <form action="@Url.Action("SignIn", "Login")" id="form-sign-in" method="post">
        <div class="form-group">
            <input id="email-signin" type="text" placeholder="Email address" name="emailSignin">
            <span class="form-message"></span>
        </div>
        <div class="form-group">
            <input id="password-signin" type="password" placeholder="Password" name="passwordSignin">
            <span class="form-message"></span>
        </div>
        <div class="form-about-sign-in">
            <div class="check-box">
                <input type="checkbox" checked id="keep-sign-in" value="keep-sign-in">
                <label for="">Keep me sign in</label>
            </div>
            <a href="#" id="forgot-password" style="float: right;">Forgotten your password?</a>
            <div style="clear: both;"></div>
        </div>
        <div class="form-about-legacy">
            <p>
                By logging in, you agree to
                Nike's <a href="./policy.html">Privacy Policy</a>
                and <a href="/term-of-uses.html">Terms of Use</a>.
            </p>
        </div>
        <div class="submit">
            <button id="signin-btn">Sign in</button>
            <a id="signin-with-google-btn"
               href="@ViewBag.response">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18" fill="none" role="img" class="icon ">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M17.64 9.20419C17.64 8.56601 17.5827 7.95237 17.4764 7.36328H9V10.8446H13.8436C13.635 11.9696 13.0009 12.9228 12.0477 13.561V15.8192H14.9564C16.6582 14.2524 17.64 11.9451 17.64 9.20419Z" fill="#4285F4"></path>
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M8.99976 18C11.4298 18 13.467 17.1941 14.9561 15.8195L12.0475 13.5613C11.2416 14.1013 10.2107 14.4204 8.99976 14.4204C6.65567 14.4204 4.67158 12.8372 3.96385 10.71H0.957031V13.0418C2.43794 15.9831 5.48158 18 8.99976 18Z" fill="#34A853"></path>
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M3.96409 10.7098C3.78409 10.1698 3.68182 9.59301 3.68182 8.99983C3.68182 8.40664 3.78409 7.82983 3.96409 7.28983V4.95801H0.957273C0.347727 6.17301 0 7.54755 0 8.99983C0 10.4521 0.347727 11.8266 0.957273 13.0416L3.96409 10.7098Z" fill="#FBBC05"></path>
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M8.99976 3.57955C10.3211 3.57955 11.5075 4.03364 12.4402 4.92545L15.0216 2.34409C13.4629 0.891818 11.4257 0 8.99976 0C5.48158 0 2.43794 2.01682 0.957031 4.95818L3.96385 7.29C4.67158 5.16273 6.65567 3.57955 8.99976 3.57955Z" fill="#EA4335"></path>
                </svg>
                Sign in with Google
            </a>
        </div>
        <div class="not-a-member">
            <p>Not a Member? <a href="@Url.Action("SignUp", "Login")">Join Us.</a></p>
        </div>
    </form>
</div>

